#!/bin/sh

basedir=`dirname $0`
xsltdir=$basedir/../xslt/queries

usage_error() {
    echo usage: `basename $0` "<outdir>" "<coursedir>" "<course>..."
    exit
}

if [ -z $1 ]
then
    usage_error
fi

outputdir=`readlink -f $1`
coursedir=`readlink -f $2`
shift 2
courses="$@"

dependencies() {
    src=$1
    $basedir/saxon \
	-xsl:"$xsltdir/depends.xslt" -s:$1 outputDir=$outputdir courseDir=$coursedir
}

to_gmake() {
    $basedir/saxon -xsl:"$xsltdir/depends2make.xslt" -s:-
}

for course in $courses
do
    dependencies $course | to_gmake
done
